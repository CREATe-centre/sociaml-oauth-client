opam-version: "1"
name: "${name}"
version: "${version}"
maintainer: "dominic.price@nottingham.ac.uk"
homepage: "${homepage}"
authors: [ "${authors}" ]
license: "${license}"
ocaml-version: [ >= "4.01.0" ]
build: [
  ["oasis" "setup"]
  ["./configure" "--prefix" prefix]
  [make "build"]
]
install: [
  [make "install"]
]
remove: [
  [make "uninstall"]
  ["ocamlfind" "remove" "${library(sociaml_oauth_client).findlibname}"]
]
depends: [
  "oasis"
  "lwt"
  "ssl"
  "uri"
  "base64"
  "cohttp" { >= "0.18.0" }
  "cryptokit"
]